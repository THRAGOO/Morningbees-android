<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <RelativeLayout
        android:id="@+id/itemBeeMemberSwipeView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_item_bee_member">

        <View
            android:id="@+id/viewBeeMemberForMember"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewBeeMemberForMember"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/itemBeeMemberProfileForMember"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/itemBeeMemberNicknameForMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/itemBeeMemberProfileForMember"
                android:textColor="#222222"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/itemBeeMemberManagerForMember"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>