<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wrapUnPaidRoyalJellyBarInTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/listBeeMemberInTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="꿀벌 목록"
            android:textColor="#222222"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/searchBeeMemberInTotalButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/listBeeMemberInTotalText"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_search_resize" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/totalRoyalJellyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapUnPaidRoyalJellyBarInTotal"/>
</RelativeLayout>