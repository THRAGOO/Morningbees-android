<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="540dp"
    android:background="@drawable/royaljelly_update_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/royalljelly_update_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님의 총 미납 금액 "
            android:textColor="#222222"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/royaljelly_update_unpaid_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:text="1,000원 "
        android:textColor="#222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="로얄젤리 업데이트 "
        android:textColor="#444444"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:src="@drawable/royaljelly_update_input_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="직접 입력 " />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+1천원 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+2천원 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+3천원 " />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+4천원 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+5천원 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="40dp">

            <ImageButton
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:src="@drawable/royaljelly_update_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="+1만원" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/royaljelly_update_confirm_btn"
            android:text="취소 "/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/royaljelly_update_confirm_btn"
            android:text="완료 "/>
    </LinearLayout>
</LinearLayout>