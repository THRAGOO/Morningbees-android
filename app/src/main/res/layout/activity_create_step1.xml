<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="25dp">

            <ImageButton
                android:id="@+id/go_back_start_button"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_left"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/info_step1_button"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_info"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#222222"
                android:text="생성할 bee의" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#222222"
                android:text="이름을 정해주세요" />

            <TextView
                android:layout_marginTop="56dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:textSize="13sp"
                android:text="Bee 이름"
                android:layout_marginBottom="17dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/create_beename_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/delete_beename_text_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_delete_all"
                    android:paddingBottom="15dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/beename_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaaaaa"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/create_step1_next_button"
        android:text="다음 1/3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="#222222"
        android:textSize="15sp"
        android:textAlignment="center"
        android:background="@drawable/selector_custom_button"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>