<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="25dp">


            <ImageButton
                android:id="@+id/go_back_step2_button"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_left"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/info_step3_button"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_info"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로얄젤리를"
                android:textSize="24sp"
                android:lineHeight="33sp"
                android:textColor="#222222"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정해주세요."
                android:textSize="24sp"
                android:lineHeight="33sp"
                android:textColor="#222222"
                android:layout_marginBottom="56dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#777777"
                android:text="로얄젤리 (최소 2,000 ~ 최대 10,000원)"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="13sp"
                android:layout_marginBottom="40dp"
                android:text="설정하실 금액만큼 아래 벌집을 터치해 주세요" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/create_step3_view">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="71dp">

                    <ImageView
                        android:id="@+id/jelly_1"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_2"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_3"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="-15dp">

                    <ImageView
                        android:id="@+id/jelly_4"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_5"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_6"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_7"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="71dp"
                    android:layout_marginTop="-15dp">

                    <ImageView
                        android:id="@+id/jelly_8"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_9"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>

                    <ImageView
                        android:id="@+id/jelly_10"
                        android:layout_width="77.2dp"
                        android:layout_height="77.4dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/royal_jelly_view"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/selected_jelly_textview"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#444444"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/create_step3_next_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="다음 3/3"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@color/deactive_button"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>