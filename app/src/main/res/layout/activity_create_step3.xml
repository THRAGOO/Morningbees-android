<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/gotoStep2FromStep3Button"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="25dp"
        android:background="#00ff0000"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_arrow_left_back" />

    <LinearLayout
        android:id="@+id/wrapCreateBeeStep3Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gotoStep2FromStep3Button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createStep3Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="33sp"
            android:text="로얄젤리를"
            android:textColor="#222222"
            android:textSize="@dimen/createBeeText1FontSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/createStep3Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineHeight="33sp"
            android:text="설정해주세요."
            android:textColor="#222222"
            android:textSize="@dimen/createBeeText1FontSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/createStep3Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:text="'로얄젤리'는 모닝비즈 내 벌금이에요.\n매일 진행되는 미션을 수행하지 못한 꿀벌에게 부과해요."
            android:textColor="#cccccc"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/createStep3Text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="로얄젤리 (최소 2,000 ~ 최대 10,000원)"
            android:textColor="#777777"
            android:textSize="13dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapCreateBeeStep3Text"
        android:paddingStart="23dp"
        android:paddingEnd="23dp" >

        <ImageView
            android:id="@+id/jelly_backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_imageview" />

        <LinearLayout
            android:id="@+id/jelly_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly2Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly2Button"
                    android:layout_centerInParent="true"
                    android:text="2,000"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly3Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly3Button"
                    android:layout_centerInParent="true"
                    android:text="3,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly4Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly4Button"
                    android:layout_centerInParent="true"
                    android:text="4,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly5Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly5Button"
                    android:layout_centerInParent="true"
                    android:text="5,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly6Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly6Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly6Button"
                    android:layout_centerInParent="true"
                    android:text="6,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly7Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly7Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly7Button"
                    android:layout_centerInParent="true"
                    android:text="7,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly8Buton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly8Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly8Buton"
                    android:layout_centerInParent="true"
                    android:text="8,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly9Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly9Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly9Button"
                    android:layout_centerInParent="true"
                    android:text="9,000"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/jelly10Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:src="@drawable/jelly_button_selector" />

                <TextView
                    android:id="@+id/jelly10Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jelly10Button"
                    android:layout_centerInParent="true"
                    android:text="10,000"
                    android:layout_marginEnd="-10dp"
                    android:textSize="12dp"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/gotoMainFromStep3Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/deactive_button"
        android:text="다음 3/3"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="15sp" />

</RelativeLayout>