<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/wrapNotificationIconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/icon_notification_before_joining_Button"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="33dp"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_notification" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/wrap_icon_illust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wrapNotificationIconLayout">

            <ImageView
                android:id="@+id/illust_before_joining_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:src="@drawable/illust_before_joining"
                android:layout_above="@id/before_joining_textview1"/>

            <TextView
                android:id="@+id/before_joining_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="회원님은 모임에\n소속되어 있지 않습니다."
                android:textColor="#222222"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/before_joining_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/before_joining_textview1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal"
                android:textColor="#aaaaaa"
                android:textSize="14dp"
                android:lineHeight="22dp"
                android:text="모임을 만들어 여왕벌이 되거나" />

            <TextView
                android:id="@+id/before_joining_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/before_joining_textview2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="34dp"
                android:gravity="center_horizontal"
                android:textColor="#aaaaaa"
                android:textSize="14dp"
                android:lineHeight="22dp"
                android:text = "여왕벌에게 초대를 부탁하세요!" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrap_icon_illust"
            android:layout_centerHorizontal="true">

        </RelativeLayout>

        <Button
            android:id="@+id/accept_beecreate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/radius_button_selector"
            android:text="모임 만들기"
            android:textSize="13dp"
            android:textStyle="bold"
            android:outlineProvider="none"/>
    </RelativeLayout>

</LinearLayout>