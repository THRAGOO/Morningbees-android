<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_bg"
                    android:scaleType="fitCenter" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp">

                    <Button
                        android:id="@+id/go_createlink_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="create link" />

                    <ImageButton
                        android:id="@+id/notification_button"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="24dp"
                        android:layout_toStartOf="@id/setting_button"
                        android:src="@drawable/icon_notification_default"
                        android:scaleType="fitCenter"
                        android:background="#00ff0000"/>

                    <ImageButton
                        android:id="@+id/setting_button"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/icon_settings"
                        android:scaleType="fitCenter"
                        android:background="#00ff0000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/bee_title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="142dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#000000"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bee_title_text"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전체꿀벌 "
                            android:textColor="#444444"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/bee_total_number_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#444444"
                            android:textSize="13dp" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        tools:context=".main.MainActivity"
        android:background="@drawable/rounded_scrollview"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <ImageView
                    android:id="@+id/amount_royal_jelly_img"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/oval" />

                <TextView
                    android:id="@+id/amount_royal_jelly_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/amount_royal_jelly_img"
                    android:text="누적 로얄젤리"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/amount_royal_jelly_txt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="72dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_total_jelly_btn" />

                    <Button
                        android:layout_width="72dp"
                        android:layout_height="28dp"
                        android:background="#00ff0000"
                        android:text="내역 확인"
                        android:textSize="12dp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <RelativeLayout
                    android:id="@+id/mission_time_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="32dp">

                    <TextView
                        android:id="@+id/mission_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="미션시간 " />

                    <RelativeLayout
                        android:id="@+id/mission_time_img"
                        android:layout_width="wrap_content"
                        android:layout_height="86dp"
                        android:layout_below="@id/mission_time"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:id="@+id/wrap_defined_time_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/mission_time_solid_img" />

                                <ImageView
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/mission_time_img" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/mission_start_time_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:textColor="#FFFFFFFF"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/mission_time_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/mission_start_time_txt"
                                        android:text="-"
                                        android:textColor="#FFFFFFFF"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/mission_end_time_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/mission_time_txt"
                                        android:textColor="#FFFFFFFF"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/wrap_undefined_time_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/undefined_button" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="미정"
                                    android:textColor="#CCCCCC"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar1_main_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_toEndOf="@id/mission_time_wrap">

                    <TextView
                        android:id="@+id/blank_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="86dp"
                        android:layout_below="@id/blank_text1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="11dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/main_bar_img" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_user_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_toEndOf="@id/bar1_main_img">

                    <TextView
                        android:id="@+id/today_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="17dp"
                        android:text="오늘의 꿀벌 " />

                    <RelativeLayout
                        android:id="@+id/today_user_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/today_user"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:id="@+id/today_bee_img"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_today_bee_img" />

                        <ImageView
                            android:id="@+id/next_bee_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/round_next_bee_img" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/today_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/today_user_img"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar2_main_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@id/mission_difficulty_wrap"
                    android:layout_toEndOf="@id/today_user_wrap">

                    <TextView
                        android:id="@+id/blank_text2"
                        android:layout_width="1dp"
                        android:layout_height="11dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="11dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="86dp"
                        android:layout_below="@id/blank_text2"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="11dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/main_bar_img" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mission_difficulty_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp">

                    <TextView
                        android:id="@+id/mission_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="난이도 " />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="86dp"
                        android:layout_below="@id/mission_difficulty"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <RelativeLayout
                                android:id="@+id/wrap_define_difficulty_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/mission_difficulty_img"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/wrap_undefine_difficulty_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/undefined_button" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="미정"
                                    android:textColor="#CCCCCC"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </FrameLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/mission_img_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/today_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/calendar_btn"
                    android:scaleType="fitCenter"
                    android:textSize="13dp" />

                <ImageButton
                    android:id="@+id/calendar_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:adjustViewBounds="true"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_calendar" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <RelativeLayout
                    android:id="@+id/wrap_not_upload_mission_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/not_upload_mission_img_view" />

                    <TextView
                        android:id="@+id/not_upload_mission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#aaaaaa"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/go_mission_create_btn"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_marginEnd="26dp"
                            android:layout_marginBottom="29dp"
                            android:adjustViewBounds="true"
                            android:background="#00ff0000"
                            android:scaleType="fitCenter"
                            android:src="@drawable/participate_in_mission" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/today_mission_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/upload_mission_img_view"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/wrap_upload_mission_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">

                            <TextView
                                android:id="@+id/mission_upload_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="29dp"
                                android:layout_marginBottom="12dp"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/mission_desc_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mission_upload_text"
                                android:layout_marginStart="29dp"
                                android:layout_marginBottom="29dp"
                                android:textColor="#ffffff"
                                android:textSize="24dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                            <ImageButton
                                android:id="@+id/go_mission_participate_btn"
                                android:layout_width="98dp"
                                android:layout_height="98dp"
                                android:layout_marginEnd="26dp"
                                android:layout_marginBottom="29dp"
                                android:adjustViewBounds="true"
                                android:background="#00ff0000"
                                android:scaleType="fitCenter"
                                android:src="@drawable/participate_in_mission" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/mission_participate_img_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="184dp"
                    android:text="미션 참여사진"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ImageButton
                        android:id="@+id/mission_participate_img_btn"
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="3dp"
                        android:adjustViewBounds="true"
                        android:background="#00ff0000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_main_recycler" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
