<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_participate_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#00ff0000"
            android:textColor="#cccccc"
            android:text="취소 "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="업로드 이미지 "
            android:textSize="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/share_participate_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#00ff0000"
            android:textColor="#f6cd00"
            android:text="공유 "/>
    </RelativeLayout>

    <View
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginBottom="88dp"/>

    <ImageView
        android:id="@+id/pc_upload_img"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="36dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/pc_reload_img"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/icon_reload"/>

            <Button
                android:layout_centerVertical="true"
                android:id="@+id/pc_reload_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="다시 올리기"
                android:textSize="14dp"
                android:textColor="#AAAAAA"
                android:layout_toEndOf="@id/pc_reload_img"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>