<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/wrapTextLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="25dp">

            <ImageButton
                android:id="@+id/gotoStep1FromStep2Button"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:background="#00ff0000"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_arrow_left_back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createBeeStep2Text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="33sp"
                android:text="미션 수행 시간을"
                android:textColor="#222222"
                android:textSize="@dimen/createBeeText1FontSize"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/createBeeStep2Text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="33sp"
                android:text="선택해 주세요."
                android:textColor="#222222"
                android:textSize="@dimen/createBeeText1FontSize"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/createBeeTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="16dp"
                android:text="시작 및 종료 시간"
                android:textColor="#777777"
                android:textSize="@dimen/createBeeTimeTextFontSize"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapTextLinearLayout"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/clock6Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/clock_6_custom_button"
                android:background="#0000ff00"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/clock7Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#0000ff00"
                android:scaleType="fitCenter"
                android:src="@drawable/clock_7_custom_button"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/clock8Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#0000ff00"
                android:scaleType="fitCenter"
                android:src="@drawable/clock_8_custom_button"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/clock9Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#0000ff00"
                android:scaleType="fitCenter"
                android:src="@drawable/clock_9_custom_button"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/clock10Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#0000ff00"
                android:scaleType="fitCenter"
                android:src="@drawable/clock_10_custom_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text6Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#444444"
                android:textStyle="bold"/>
            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/text7Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#444444"
                android:textStyle="bold"/>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/text8Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#444444"
                android:textStyle="bold"/>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/text9Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#444444"
                android:textStyle="bold"/>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/text10Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17dp"
                android:textColor="#444444"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/gotoStep3FromStep2Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_custom_button"
        android:letterSpacing="0.02"
        android:text="다음 2/3"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="15sp" />

</RelativeLayout>