<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_participate_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#00ff0000"
            android:text="취소 "
            android:textColor="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="업로드 이미지 "
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/share_participate_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#00ff0000"
            android:text="공유 "
            android:textColor="#f6cd00" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pc_upload_img"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="40dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pc_upload_img"
            android:layout_marginBottom="79dp">

            <ImageView
                android:id="@+id/pc_reload_img"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/icon_reload"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/pc_reload_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/pc_reload_img"
                android:background="#00ff0000"
                android:text="다시 올리기"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>