<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/wrap_sign_up_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginStart="30dp"
            android:text="Morningbees"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="에 오신 것을 환영합니다." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="닉네임을 만들고" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="아침 미션에 참가하세요!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="닉네임을 입력하세요" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrap_sign_up_text_layout">

        <EditText
            android:id="@+id/signup_nickname_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/signup_nickname_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="중복확인" />
    </RelativeLayout>

    <Button
        android:id="@+id/signup_start_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:text="시작하기"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"/>
</RelativeLayout>

