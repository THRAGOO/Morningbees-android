<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/item_beelist_profile_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_beelist_nickname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_beelist_profile_img"
        android:text = "morningbees"
        android:textColor="#222222"
        android:textSize="15sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_beelist_royaljelly_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_beelist_button"
        android:text="1,000"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/item_beelist_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/round_item_beelist_btn"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="+"
        android:textColor="#ffffff"/>

</RelativeLayout>