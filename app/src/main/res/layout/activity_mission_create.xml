<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cancel_btn"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="12dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미션 등록"
            android:layout_centerInParent="true"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/mission_create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="완료"
            android:layout_alignParentEnd="true"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginBottom="27dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="소개 "/>

    <EditText
        android:id="@+id/description_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="54dp"
        android:hint="2~10자 이내로 입력해 주세요."
        android:paddingBottom="20dp"
        android:backgroundTint = "#dddddd"
        android:theme="@style/EditTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="21dp"
        android:text="사진 업로드"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/wrap_click_img_view"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/take_picture_btn"
                    android:layout_width="148dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/take_picture_button"
                    android:paddingTop="50dp"
                    android:textColor="#aaaaaa"
                    android:text="사진찍기"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/get_picture_btn"
                    android:layout_width="148dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/take_picture_btn"
                    android:background="@drawable/gallery_picture_button"
                    android:paddingTop="50dp"
                    android:text="갤러리에서\n가져오기"
                    android:textColor="#aaaaaa"
                    android:stateListAnimator="@null"/>
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/wrap_load_img_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="24dp">
            
            <ImageView
                android:id="@+id/upload_img_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/round_upload_img_view"
                android:layout_marginEnd="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_toEndOf="@id/upload_img_view">

                <ImageView
                    android:id="@+id/reload_img"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@drawable/icon_reload"
                    android:layout_alignParentBottom="true"/>

                <Button
                    android:id="@+id/reload_img_btn"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:background="#00ff0000"
                    android:text="다시 올리기"
                    android:textSize="14dp"
                    android:textColor="#AAAAAA"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="7dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginStart="24dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="난이도 설정"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="18dp"
        android:textColor="#AAAAAA"
        android:textSize="13dp"
        android:text="설정값에 따라 로얄젤리 액수가 달라집니다."/>

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="314dp"
                android:layout_height="98dp"
                android:layout_centerInParent="true"
                android:background="@drawable/difficulty_round_img_view"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/hard_click_btn"
                android:layout_width="104dp"
                android:layout_height="96dp"
                android:background="@drawable/hard_btn_selector"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/hard_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="상"/>
                <TextView
                    android:id="@+id/hard_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hard_txt"
                    android:layout_centerHorizontal="true"
                    android:text="-1,000"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/normal_click_btn"
                android:layout_width="104dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:background="@drawable/normal_btn_selector"
                android:layout_toEndOf="@id/hard_click_btn"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/normal_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="중"/>
                <TextView
                    android:id="@+id/normal_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/normal_txt"
                    android:layout_centerHorizontal="true"
                    android:text="기본값" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/easy_click_btn"
                android:layout_width="104dp"
                android:layout_height="96dp"
                android:background="@drawable/easy_btn_selector"
                android:layout_toEndOf="@id/normal_click_btn"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp">
                <TextView
                    android:id="@+id/easy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="하"/>
                <TextView
                    android:id="@+id/easy_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/easy_txt"
                    android:layout_centerHorizontal="true"
                    android:text="+1,000원"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>